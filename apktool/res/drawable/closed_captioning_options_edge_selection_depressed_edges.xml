<?xml version="1.0" encoding="utf-8"?>
<selector android:constantSize="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:left="6.0dip" android:top="6.0dip" android:right="6.0dip" android:bottom="6.0dip">
                <bitmap android:src="@drawable/depressed_edges" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3.0dip" android:color="@color/color_selected" />
                </shape>
            </item>
            <item android:left="6.0dip" android:top="6.0dip" android:right="6.0dip" android:bottom="6.0dip">
                <bitmap android:src="@drawable/depressed_edges" />
            </item>
        </layer-list>
    </item>
</selector>