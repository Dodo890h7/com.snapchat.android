<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_alignParentBottom="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/button_container">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/registration_title_size" android:textColor="@color/purple" android:gravity="center_horizontal" android:id="@id/phone_verification_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap_5x" android:layout_marginBottom="@dimen/default_gap_2x" android:text="@string/twofa_new_device_verification_title" />
            <TextView android:textSize="@dimen/text_size_small" android:gravity="center_horizontal" android:id="@id/phone_verification_explanation" android:paddingLeft="@dimen/default_gap_5x" android:paddingRight="@dimen/default_gap_5x" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_gap" android:layout_marginBottom="@dimen/default_gap" android:text="@string/twofa_new_device_verification_explanation" style="@style/RegistrationCopyText" />
            <RelativeLayout android:paddingLeft="@dimen/default_gap_5x" android:paddingRight="@dimen/default_gap_5x" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <EditText android:id="@id/phone_verification_verification_code_field" android:background="@drawable/aa_holo_edit_text_black_selector" android:layout_width="fill_parent" android:layout_height="@dimen/ui_element_unit" android:layout_marginTop="-4.0dip" android:hint="@string/confirm_phone_number_verification_code_hint" android:layout_below="@id/phone_verification_phone_number_error_message" android:inputType="number" style="@android:style/Widget.Holo.EditText" />
                <ImageView android:id="@id/phone_verification_verification_code_error_red_x" android:layout_alignRight="@id/phone_verification_verification_code_field" android:layout_alignBottom="@id/phone_verification_verification_code_field" style="@style/ErrorRedX" />
                <TextView android:textSize="@dimen/registration_textview_error_message_text_size" android:textColor="@color/red_text" android:id="@id/phone_verification_verification_code_error_message" android:paddingLeft="@dimen/default_gap" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minLines="1" android:layout_below="@id/phone_verification_verification_code_field" android:layout_alignLeft="@id/phone_verification_verification_code_field" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@id/button_container" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <Button android:id="@id/phone_verification_continue_button" android:text="@string/registration_continue" android:textAllCaps="true" style="@style/RegistrationContinueButton" />
        <ProgressBar android:layout_gravity="center" android:id="@id/phone_verification_progressbar" android:visibility="gone" android:layout_width="@dimen/ui_element_unit" android:layout_height="@dimen/ui_element_unit" />
    </FrameLayout>
</RelativeLayout>